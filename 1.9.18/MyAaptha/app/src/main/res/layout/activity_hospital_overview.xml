<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/doctor_overview_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cpetsol.cpetsolutions.myaaptha.activity.DoctorOverviewActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/hospimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/font_size"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="#3399ff"
                        android:id="@+id/hospitalname"
                        android:textSize="@dimen/layoutHeadings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/adress"
                        android:textSize="@dimen/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/locality"
                    android:textSize="@dimen/font_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/mobileno"
                    android:textSize="@dimen/font_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#3399ff"
                    android:id="@+id/email"
                    android:textSize="@dimen/font_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:text="Map"
                    android:layout_weight="1"
                    android:textColor="#3399ff"
                    android:id="@+id/map"
                    android:textSize="@dimen/font_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                    <Button
                        android:layout_weight="1"
                        android:text="Add Doctor+"
                        android:background="@drawable/button_selector_1"
                        android:id="@+id/adddoctor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:text="About Hospital"
                android:textSize="@dimen/font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
<TextView
    android:id="@+id/abouthsp"
    android:textSize="@dimen/font_sizedesc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_marginTop="@dimen/font_size"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <ListView
            android:id="@+id/lv_hospdocs"
            android:background="@drawable/border"
            android:divider="#3399ff"
            android:dividerHeight="4px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
