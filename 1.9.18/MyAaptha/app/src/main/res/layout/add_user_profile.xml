<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_edit_text_bg"
    android:padding="@dimen/padding_x2">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/insta_blue_bg"
            android:typeface="sans"
            android:textSize="@dimen/layoutHeadings"
           android:layout_height="wrap_content"
            android:text=" Add Friends And Relatives"
            android:layout_weight="1.7"
            android:layout_width="0dp" />
        <ImageView
            android:layout_weight="0.3"
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"
           />

    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/autotextAdd"
        style="@style/EditTextView"
        android:hint="search..."
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"/>

    <ListView
        android:id="@+id/lvAddFR"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"></ListView>


</LinearLayout>