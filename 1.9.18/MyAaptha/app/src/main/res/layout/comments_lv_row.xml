<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Answer:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/font_size"
            android:id="@+id/ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/blue_aboutUs"
                        android:textSize="@dimen/padding_x"
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:weightSum="4"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/fai_like"
                            android:textColor="@color/blue_aboutUs"
                            android:text="@string/fai_likes"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/likes"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/fai_dislikes"
                            android:textColor="@color/blue_aboutUs"
                            android:text="@string/fai_likes"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/dislikes"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/name"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/replyt"
                    android:layout_weight="1"
                    android:textColor="@color/brown"
                    android:textSize="@dimen/font_size"
                    android:textStyle="italic"
                    android:text="REPLY"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/form_edit_text_bg"
        android:id="@+id/LLReply"
        android:orientation="vertical"
       android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_margin="@dimen/padding_x"
            android:background="@drawable/form_edit_text_bg"
            android:id="@+id/reply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/logo_size" />

    </LinearLayout>

</LinearLayout>
</LinearLayout>