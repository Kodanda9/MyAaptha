<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_x2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/form_edit_text_bg"
        android:orientation="vertical"
        android:padding="@dimen/padding_x2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <ImageView
                    android:id="@+id/drImgHome"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:src="@drawable/doctor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_2x"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/DrName"
                    style="@style/textViewStyle"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="0dp"
                    android:textColor="@color/insta_blue_bg"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
<LinearLayout
    android:layout_weight="1.4"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/DrSpec"
                    style="@style/textViewStyle"
                    android:textColor="@color/gray"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size"/>
                <TextView
                    android:layout_height="@dimen/spinnerHeight"
                    android:id="@+id/DrExperience"
                    style="@style/textViewStyle"
                    android:textColor="@color/gray"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size"/>
</LinearLayout>
                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/DrPrice"
                                style="@style/textViewStyle"
                                android:textColor="@color/orange"
                                android:textStyle="bold"
                                android:padding="0dp"
                                android:gravity="center|center_vertical"/>
                            <TextView
                                android:id="@+id/Docors_book1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Book"
                                android:textSize="@dimen/font_size"
                                android:background="@drawable/button_selector_1"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                    </LinearLayout>

</LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left">
                    <TextView
                        android:id="@+id/DrHospitalName"
                        style="@style/LVViewText"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone">
                    <TextView
                        android:layout_weight="1"
                        style="@style/text_date"
                        android:text="Qualification" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=":"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/DrQualification"
                        android:layout_weight="1"
                        style="@style/LVViewText" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="gone">
                    <TextView
                        android:layout_weight="1"
                        style="@style/text_date"
                        android:text="Week Days" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=":"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/DrWeekdays"
                        android:layout_weight="1"
                        style="@style/LVViewText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">
                    <TextView
                        android:layout_weight="1"
                        style="@style/text_date"
                        android:text="Available Days" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=":"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/DrAvailabledays"
                        android:layout_weight="1"
                        style="@style/LVViewText" />
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.uncopt.android.widget.text.justify.JustifiedTextView
                        android:padding="@dimen/padding_x2"
                        android:textColor="@color/insta_blue_bg"
                        android:textSize="14dp"
                        android:maxLines="3"
                        android:id="@+id/days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>