<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hospitals_data_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/margin_x"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/padding_x"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="Doctor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="HospitalName"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="Monday"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:autofillHints="StartTime"
                    android:id="@+id/monspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>
                <Spinner
                    android:id="@+id/monendspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="Tuesday"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/tuespinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>
                <Spinner
                    android:id="@+id/tueendspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="Wednesday"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/wedspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>
                <Spinner
                    android:id="@+id/wedendspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="Thursday"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/thuspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>
                <Spinner
                    android:id="@+id/thuendspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="Friday"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/frispinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>
                <Spinner
                    android:id="@+id/friendspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="Saturday"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Spinner

                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1"
                    android:id="@+id/satspinner">
                </Spinner>

                <Spinner
                    android:id="@+id/satendspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/font_size"
                    android:text="Sunday"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Spinner

                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1"
                    android:id="@+id/sunspinner">
                </Spinner>

                <Spinner
                    android:id="@+id/sunendspinner"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="Duration"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/durat"
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/padding_x"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="@dimen/font_size"
                    android:text="Price"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textAlignment="center"
                    android:background="@drawable/form_edit_text_bg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/editTextHeight"
                    android:layout_weight="1">
                </EditText>

            </LinearLayout>
            <Button
                android:layout_marginTop="@dimen/padding_x"
                android:textSize="@dimen/font_size"
                android:text="SUBMIT"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/editTextHeight" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
