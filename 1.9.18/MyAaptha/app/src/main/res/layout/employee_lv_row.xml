<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/insta_blue_bg"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
             android:paddingLeft="@dimen/font_size"
                android:textSize="@dimen/tvHeading"
                android:layout_weight="1.4"
                android:id="@+id/employname"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:id="@+id/tv_faiEdit"
                    style="@style/userUpdateButton"
                    />
            <TextView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="0.25"
                    android:layout_width="0dp"
                    android:id="@+id/tv_faiDelete"
                    style="@style/userDeleteButton"
                    />
            </LinearLayout>
        <LinearLayout
            android:paddingLeft="@dimen/font_size"
            android:layout_marginTop="@dimen/font_size"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:layout_weight="0.9"
               android:text="HospitalName"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:layout_weight="0.1"
                android:text=":"
               android:layout_width="0dp"
               android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/blue_aboutUs"
                android:textSize="@dimen/font_size"
                android:layout_weight="1"
                android:id="@+id/hospname"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="@dimen/font_size"
            android:layout_marginTop="@dimen/font_size"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:layout_weight="0.9"
                android:text="EmploymentType"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:layout_weight="0.1"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/blue_aboutUs"
                android:textSize="@dimen/font_size"
                android:layout_weight="1"
                android:id="@+id/emptype"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="@dimen/font_size"
            android:layout_marginTop="@dimen/font_size"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:layout_weight="0.9"
                android:text="Remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:layout_weight="0.1"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/blue_aboutUs"
                android:textSize="@dimen/font_size"
                android:layout_weight="1"
                android:id="@+id/remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

