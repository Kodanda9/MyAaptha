<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_edit_text_bg"
    tools:context="com.cpetsol.cpetsolutions.myaaptha.fragment.HospitalsFragment">
<LinearLayout
    android:weightSum="1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <ListView
      android:layout_weight="0.9"
      android:id="@+id/hosplv"
      android:layout_width="match_parent"
      android:layout_height="0dp">
  </ListView>
  <LinearLayout
      android:background="@color/app_back_gray"
      android:weightSum="3"
      android:orientation="horizontal"
      android:layout_weight="0.1"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="0dp">
    <Button
        android:text="Add Hospital"
        android:id="@+id/add"
        android:layout_gravity="center"
        android:background="@drawable/button_selector_1"
        android:layout_weight="1.3"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

  </LinearLayout>
</LinearLayout>


</LinearLayout>
