<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_edit_text_bg"
    tools:context="com.cpetsol.cpetsolutions.myaaptha.fragment.LabTest_DetailsFragment">
    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <ListView
         android:id="@+id/labtest_listview"
         android:layout_weight="1.9"
       android:layout_width="match_parent"
       android:layout_height="0dp">
     </ListView>
        <Button
            android:backgroundTint="@color/orange"
            android:background="@drawable/button_selector_1"
            android:id="@+id/add"
            android:text="Add Lab Test Details"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>
</LinearLayout>