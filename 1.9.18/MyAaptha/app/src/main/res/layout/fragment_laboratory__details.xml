<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_medical_shop_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/draw_edittext_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/lightgray"
            android:layout_marginTop="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/padding_x2"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:text="Lab Owner Name*: :"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
android:padding="@dimen/padding_x2"
                android:id="@+id/labName"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:background="@drawable/lightgrayedittextbox"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinnerHeight" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/summer"
            android:layout_marginTop="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/padding_x2"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:text="Name Of the Laboratory:"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:padding="@dimen/padding_x2"
                android:id="@+id/labShopNm"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:background="@drawable/orangeedittextbox"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinnerHeight" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/lightgray"
            android:layout_marginTop="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/padding_x2"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:text="Laboratory Registration No*"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:padding="@dimen/padding_x2"
                android:id="@+id/labShpRegNo"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:background="@drawable/lightgrayedittextbox"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinnerHeight" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/summer"
            android:layout_marginTop="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/padding_x2"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:text="Approved By*:"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:padding="@dimen/padding_x2"
                android:id="@+id/labapprvBy"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:background="@drawable/orangeedittextbox"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinnerHeight" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/lightgray"
            android:layout_marginTop="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/padding_x2"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:text="Year of Registration*:"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:padding="@dimen/padding_x2"
                android:id="@+id/labregYr"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:background="@drawable/lightgrayedittextbox"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinnerHeight" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/summer"
            android:layout_marginTop="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/padding_x2"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:text="Qualification Year*:"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:padding="@dimen/padding_x2"
                android:id="@+id/labQualYr"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:background="@drawable/orangeedittextbox"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinnerHeight" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/lightgray"
            android:layout_marginTop="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/padding_x2"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:text="State:"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                style="@style/SpinnerStyle"
                android:padding="@dimen/padding_x2"
                android:id="@+id/state"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:background="@drawable/lightgrayedittextbox"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinnerHeight" />

        </LinearLayout>
        <LinearLayout
            android:background="@color/summer"
            android:layout_marginTop="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/padding_x2"
                android:textSize="@dimen/font_size"
                android:layout_gravity="center"
                android:text="District:"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Spinner
                style="@style/SpinnerStyle"
                android:padding="@dimen/padding_x2"
                android:id="@+id/district"
                android:layout_gravity="center"
                android:textSize="@dimen/font_size"
                android:background="@drawable/orangeedittextbox"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="@dimen/spinnerHeight" />

        </LinearLayout>
        <Button
            android:id="@+id/submitlab"
            android:textSize="@dimen/font_size"
            android:background="@drawable/button_selector_1"
            android:backgroundTint="#0888a7"
            android:layout_marginTop="@dimen/padding_x2"
            android:layout_gravity="center"
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:visibility="gone"
            android:id="@+id/updatelab"
            android:textSize="@dimen/font_size"
            android:background="@drawable/button_selector_1"
            android:backgroundTint="#0888a7"
            android:layout_marginTop="@dimen/padding_x2"
            android:layout_gravity="center"
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
