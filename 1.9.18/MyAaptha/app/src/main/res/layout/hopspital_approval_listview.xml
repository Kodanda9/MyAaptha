<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:background="@color/insta_blue_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextHeight">
            <TextView
                android:textColor="#FFFF"
                android:textSize="@dimen/tvHeading"
                android:layout_weight="1.4"
                android:layout_gravity="center"
                android:id="@+id/hospitalname"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:visibility="gone"
                    android:background="@drawable/circle_icon"
                    android:id="@+id/approve"
                    android:src="@drawable/ic_check_black_24dp"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:visibility="gone"
                    android:background="@drawable/redcircleicon"
                    android:id="@+id/reject"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
           android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:text="Reg. Number"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content" />
            <TextView
                android:text=":"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399FF"
                android:id="@+id/regnumber"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:text="Reg. Year"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content" />
            <TextView
                android:text=":"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399FF"
                android:id="@+id/regyear"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:text="RoC"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content" />
            <TextView
                android:text=":"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399FF"
                android:id="@+id/roc"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:text="Location"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content" />
            <TextView
                android:text=":"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399FF"
                android:id="@+id/location"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:text="Address"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content" />
            <TextView
                android:text=":"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399FF"
                android:id="@+id/adress"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:text="Status"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content" />
            <TextView
                android:text=":"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1.2"
                android:textSize="@dimen/font_size"
                android:textColor="#3399FF"
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>