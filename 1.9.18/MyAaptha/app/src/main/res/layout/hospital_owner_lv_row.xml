<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/insta_blue_bg"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/tvHeading"
            android:textColor="@color/white"
            android:id="@+id/hospitalname"
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_faiEdit"
                style="@style/userUpdateButton"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_faiDelete"
                style="@style/userDeleteButton"
                />
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:padding="@dimen/font_size"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="Category Type"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size"
        android:layout_weight="0.9"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/black"
        android:textSize="@dimen/font_size"
        android:text=":"
        android:layout_weight="0.1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/blue_aboutUs"
        android:textSize="@dimen/font_size"
        android:id="@+id/categorytype"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:padding="@dimen/font_size"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Employment Name"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size"
            android:layout_weight="0.9"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/font_size"
            android:text=":"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/blue_aboutUs"
            android:textSize="@dimen/font_size"
            android:id="@+id/employmenttype"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>