<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/insta_blue_bg"
            android:weightSum="7"
            android:id="@+id/titleEdu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:padding="@dimen/padding_x2"
                android:layout_gravity="center"
                android:id="@+id/labtest"
                android:layout_weight="3"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />/>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_faiEdit"
                    style="@style/userUpdateButton"
                    />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_faiDelete"
                    style="@style/userDeleteButton"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                >

                <TextView
                    android:text="@string/hold"
                    android:tint="@color/colorAccent"
                    style="@style/userUpdateButton"
                    android:id="@+id/holdy"
                    />

            </LinearLayout>
            <Button
                android:visibility="gone"
                android:layout_gravity="center_horizontal|end"
                android:text="Unhold"
                android:backgroundTint="@color/insta_green_deli"
                android:background="@drawable/button_selector_1"
                android:id="@+id/unhold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:text="Price At Lab"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/priceatlab"
                android:layout_weight="1.1"
                android:textColor="#3399ff"
                android:textSize="@dimen/font_size"

                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:text="Price At Home"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/priceathome"
                android:layout_weight="1.1"
                android:textColor="#3399ff"
                android:textSize="@dimen/font_size"

                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:text="Discount(%)"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/discount"
                android:layout_weight="1.1"
                android:textColor="#3399ff"
                android:textSize="@dimen/font_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/padding_x2"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="0.8"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:text="Remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/remarks"
                android:layout_weight="1.1"
                android:textColor="#3399ff"
                android:textSize="@dimen/font_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>