<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/royalBluelow"
    android:orientation="vertical"
    tools:context=".activity.SplashScreenActivity">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center">
           <ImageView
               android:background="@drawable/circle_round_background"
               android:layout_width="@dimen/nav_drawer_width"
               android:layout_height="@dimen/nav_drawer_width"
               android:src="@drawable/logo"
               android:id="@+id/imageView2" />
       </RelativeLayout>
       <ProgressBar
           android:id="@+id/progressBar"
           style="?android:attr/progressBarStyle"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:layout_below="@+id/imageView2"
           android:indeterminateTint="@android:color/white"
           android:visibility="visible"/>
   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/padding_2x"
        android:gravity="right">

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector_1"
            android:text="Next" />
    </LinearLayout>

</RelativeLayout>