<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_profile_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.cpetsol.cpetsolutions.myaaptha.activity.UserProfileActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:padding="@dimen/font_size"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/male"
            android:layout_gravity="center"
            android:id="@+id/userImage"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:id="@+id/userid"
                android:text="User Id"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399ff"
                android:id="@+id/useridData"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:text="Full Name"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:id="@+id/userFullName"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399ff"
                android:id="@+id/userFullNameData"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:text="S/o or D/o"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"

                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399ff"
                android:id="@+id/sord"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:text="Email Id"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"

                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/email"
                android:textSize="@dimen/font_size"
                android:textColor="#3399ff"

                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:text="Mobile No"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"

                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399ff"
                android:id="@+id/mobileno"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:text="BloodGroup"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"

                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399ff"
                android:id="@+id/bloodgroup"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:text="Points"
                android:textSize="@dimen/font_size"
                android:textColor="@color/black"
                android:id="@+id/userPoints"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="0.1"
                android:textColor="@color/black"
                android:text=":"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/font_size"
                android:textColor="#3399ff"
                android:id="@+id/userPointsData"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:gravity="center"
                android:backgroundTint="#FFA07A"
                android:layout_weight="0.8"
                android:background="@drawable/button_selector_1"
                android:text="Add Friend"
                android:id="@+id/AddFrndBtn"
                android:layout_width="0dp"
                android:textSize="@dimen/font_size"
                android:layout_height="@dimen/editTextHeight" />
            <TextView
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:gravity="center"
                android:background="@drawable/button_selector_1"
                android:backgroundTint="#FF20E7C6"
                android:layout_weight="0.8"
                android:text="Add Relative"
                android:textSize="@dimen/font_size"
                android:id="@+id/AddRelativeBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/editTextHeight" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:visibility="gone"
                android:layout_weight="0.8"
               android:backgroundTint="#FFA07A"
                android:background="@drawable/button_selector_1"
                android:text="Accept Request"
                android:id="@+id/Accept"
                android:layout_width="0dp"
                android:textSize="@dimen/font_size"
                android:layout_height="@dimen/editTextHeight" />
            <TextView
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:visibility="gone"
                android:layout_weight="0.8"
                android:background="#FF20E7C6"
                android:text="Reject Request"
                android:textSize="@dimen/font_size"
                android:id="@+id/Reject"
                android:layout_width="0dp"
                android:layout_height="@dimen/editTextHeight" />
        </LinearLayout>
        <Button
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone"
            android:background="#FF20E7C6"
            android:text="Request Sent"
            android:textSize="@dimen/font_size"
            android:id="@+id/requestsent"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinnerHeight" />
        <Button
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone"
            android:background="#FF20E7C6"
            android:text="UnFriend"
            android:textSize="@dimen/font_size"
            android:id="@+id/btnUnFriend"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spinnerHeight" />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>
